@inherits LayoutComponentBase

<div class="page ">
    <div class="bg-primario vh-100 p-3 d-flex flex-column justify-content-between w-auto">
        <NavMenu />
    </div>


    <main class="bg-fondo vh-100 p-3 container overflow-auto">
        <div class="container overflow-hidden">

            @{
                int habitacion = 101;
            }
            @for (int r = 0; r < 9; r++)
            {
                <div class="row mb-4 justify-content-between">

                    @for (int c = 0; c < 5; c++)
                    {
                        int hab = habitacion + (r * 5) + c;

                        if (hab == 110) habitacion = 191;
                        else if (hab == 210) habitacion = 281;
                        else if (hab == 310) habitacion = 371;

                        <div class="col-lg-2 col-md-12 bg-white border-radius shadow p-0">
                            <div class="row gx-1 justify-content-between mb-4">
                                <div class="text-uppercase text-white text-center border-radius-top fw-bold pb-2 bg-verde-card">
                                    <p class="mb-1 "><u>@hab</u></p>
                                    <p class="mb-0">Disponible</p>
                                </div>
                                <div class="px-2 pb-2 text-center">
                                    <p class="fw-bold gris-claro m-0 py-4 "></p>
                                    <button class="btn btn-secondary p-1 text-uppercase fw-bold font-xs">Ver habitacion</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </main>
</div>


